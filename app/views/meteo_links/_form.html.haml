%div{ class: "row"}
  %div{ class: "col-md-6 col-md-offset-3"}
    = form_for(@meteo_link) do |f| 
      = f.label "Название"
      = f.text_field :name
      
      = f.label "Адрес"
      = f.text_field :address
      
      = f.label "Активна?"
      = f.check_box :is_active

      = f.submit "Сохранить", class: "btn btn-primary"
