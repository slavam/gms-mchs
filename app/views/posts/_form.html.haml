%div{ class: "row"}
  %div{ class: "col-md-6 col-md-offset-3"}
    = form_for @post do |form|
      %table.card
        %tr
          %th Название:
          %td= form.text_field :name, size: 100
        %tr
          %th Тип:
          %td= collection_select(:post, :site_type_id, SiteType.all, :id, :name, {:prompt => true})
        %tr
          %th Город:
          %td= @post.city.name
        %tr
          %th Веществ:
          %td= form.text_field :substances_num
        %tr
          %th Координаты: 
          %td{margin: "10%"}= form.text_field :coordinates
        %tr
          %th Высота:
          %td= form.text_field :height
        %tr
          %th Рабочий?:
          %td= form.check_box :active
  
  
      = submit_tag "Сохранить"
= link_to "Список", posts_path            