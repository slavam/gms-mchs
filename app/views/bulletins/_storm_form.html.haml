.container
  = form_for @bulletin do |form|
    %table{class: "table table-hover"}
      %tr
        %th Отчетная дата
        %td= form.text_field :report_date
      %tr
        %th Час
        %td= form.text_field :storm_hour
      %tr
        %th Минуты
        %td= form.text_field :storm_minute
      %tr
        %th Тип
        %td= form.text_field :bulletin_type
      %tr
        %th Номер
        %td= form.text_field :curr_number
      %tr
        %th Текст
        %td= form.text_area :storm, cols: "30", rows: "5"
      %tr
        %th Синоптик
        %td= form.select :synoptic1, options_for_select(Bulletin.synoptic_list)
    %br
    = submit_tag "Сохранить"
- if @bulletin.bulletin_type == 'storm'
  = link_to "Список", "/bulletins/list?bulletin_type=storm"
- else
  = link_to "Список", "/bulletins/list?bulletin_type=sea_storm"