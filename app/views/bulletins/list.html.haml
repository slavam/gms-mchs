- bulletin_types = {'daily' => "Ежедневные", 'sea' => "Морские", 'holiday' => "Выходного дня", 'storm' => "Штормовые", 'radiation' => "Радиация", 'tv' => "Телевидение"}
%div{:class=>"center jumbotron"}
  %h3= "Бюллетени (#{bulletin_types[@bulletin_type]})"
  .container
    %table{class: "table table-hover"}
      %thead
        %tr
          %th= "Дата"
          %th= "Номер"
          %th= ""
          %th= ""
          %th= ""
          %th= ""
    
      %tbody
        - @bulletins.each do |b| 
          %tr
            %td= b.report_date.to_s(:custom_datetime)
            %td= b.curr_number
            - case @bulletin_type
              - when 'daily'
                %td= link_to "Просмотр", bulletin_path(b)
                %td= link_to "Распечатать", "print_bulletin.pdf?id=#{b.id}"
              - when 'sea'
                %td= link_to "Просмотр", "#{b.id}/sea_show"
                %td= link_to "Распечатать", "#{b.id}/sea_show.pdf"
              - when 'holiday'
                %td= link_to "Просмотр", "#{b.id}/holiday_show"
                %td= link_to "Распечатать", "#{b.id}/holiday_show.pdf"
              - when 'storm'
                %td= link_to "Просмотр", "#{b.id}/storm_show"
                %td= link_to "Распечатать", "#{b.id}/storm_show.pdf"
            %td= link_to "Изменить", edit_bulletin_path(b.id)
            %td= link_to 'Destroy', b, method: :delete, data: { confirm: 'Are you sure?' }
  
    %br
- case @bulletin_type
  - when 'daily'
    = link_to "Создать", new_bulletin_path  
  -when 'sea'
    = link_to "Создать", bulletins_new_sea_bulletin_path  
  -when 'storm'
    = link_to "Создать", bulletins_new_storm_bulletin_path  
  -when 'holiday'
    = link_to "Создать", bulletins_new_holiday_bulletin_path  
