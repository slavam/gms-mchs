%tr
  %td= pollution_value.material.name
  %td= "#{pollution_value.value} / #{pollution_value.concentration.nil? ? '' : pollution_value.concentration.round(4)}"
  %td= link_to 'Изменить', edit_pollution_value_path(pollution_value)
  %td= link_to 'Удалить', pollution_value_path(pollution_value), :method => :delete, data: {:confirm => "Вы действительно хотите удалить концентрацию?"}
