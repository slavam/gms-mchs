%div{ class:"row"}
  %div{ class: "col-md-6 col-md-offset-3"}
    %h1= "Вещества"
    %table{class: "table table-hover"}
      %thead
        %tr
          %th= "Название"
          %th= "Единица измерения"
          %th= "ПДК средняя"
          %th= "ПДК макс."
          %th= "vesmn"
          %th= "klop"
          %th= "imax"
          %th= "v"
          %th= "grad"
          %th= "point"
          %th= ""
      %tbody
        - @substances.each do |sub| 
          %tr
            %td= sub.description
            %td= sub.edval
            %td= sub.pdksr
            %td= sub.pdkmax
            %td= sub.vesmn
            %td= sub.klop
            %td= sub.imax
            %td= sub.v
            %td= sub.grad
            %td= sub.point
            %td= link_to 'Изменить', edit_substance_path(sub.idsubstance)
